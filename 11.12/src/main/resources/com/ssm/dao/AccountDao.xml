<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssm.dao.AccountDao">
    <insert id="save">
        insert into account(id,name,money) values (#{id},#{name},#{money});
    </insert>
    <insert id="update">
        update account set name=#{name},money=#{money} where id = #{id}
    </insert>
    <insert id="delete">
        delete from account where id = #{id}
    </insert>
    <select id="findAll" resultType="com.ssm.pojo.Account">
        select * from account;
    </select>
    <select id="findById" resultType="com.ssm.pojo.Account">
        select * from account where id = #{id}
    </select>
    <delete id="deleteBatch" parameterType="int">
        /*delete from account where id in(1,2,2,3);*/
        delete from account
          <where>
              <foreach collection="array" open="id in(" close=")" separator="," item="id">
                  #{id}
              </foreach>
          </where>
    </delete>
</mapper>